# Development Environment Configuration
# Copy this to terraform.tfvars and update with your values

# AWS Configuration
aws_region = "us-east-1"  # Change to your preferred region

# Project Settings
project_name = "ticket-system"

# Network Configuration
vpc_cidr           = "10.0.0.0/16"
public_subnet_cidr = "10.0.1.0/24"

# Instance Configuration
instance_type      = "t3.medium"  # 2 vCPU, 4GB RAM (~$30/month)
root_volume_size   = 50           # GB

# SSH Access
public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQ... your-public-key-here"

# Security - IMPORTANT: Restrict to your IP address for security
allowed_cidr_blocks = [
  "203.0.113.0/32"  # Replace with your public IP address
  # Add more IPs as needed for team access
]

# Docker
docker_compose_version = "2.21.0"